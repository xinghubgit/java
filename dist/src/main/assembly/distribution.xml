<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>${profile}-${build.timestamp}</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/assembly/bin</directory>
            <includes>
                <include>start.sh</include>
                <include>start-${profile}.sh</include>
                <include>start_inside.sh</include>
                <include>stop.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/assembly/sbin</directory>
            <fileMode>755</fileMode>
            <outputDirectory>sbin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>application.properties</include>
                <include>logback-spring.xml</include>
            </includes>
            <fileMode>664</fileMode>
            <outputDirectory>conf</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!-- copy env specific annotation file to env_conf folder -->
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>application-*.properties</include>
            </includes>
            <fileMode>664</fileMode>
            <outputDirectory>env_conf</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
</assembly>
